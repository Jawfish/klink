{
    "info": {
        "name": "Test Collection",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"username\": \"username\", \"unhashed_password\": \"unhashed_password\"}"
                },
                "url": {
                    "raw": "{{AUTH_SERVICE_URL}}/register",
                    "protocol": "http",
                    "host": [
                        "{{AUTH_SERVICE_URL}}"
                    ],
                    "path": [
                        "register"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "username",
                            "value": "username"
                        },
                        {
                            "key": "password",
                            "value": "unhashed_password"
                        }
                    ]
                },
                "url": {
                    "raw": "{{AUTH_SERVICE_URL}}/token",
                    "protocol": "http",
                    "host": [
                        "{{AUTH_SERVICE_URL}}"
                    ],
                    "path": [
                        "token"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "pm.test('Response has token', function () {",
                            "    pm.response.to.have.jsonBody('token');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ]
}